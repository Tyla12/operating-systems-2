-- Create the "student_records" database if it doesn't exist
CREATE DATABASE IF NOT EXISTS student_records;

-- Switch to the "student_records" database
USE student_records;

-- Create the "students" table
CREATE TABLE students (
    student_id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(50) NOT NULL,
    age INT,
    gender ENUM('Male', 'Female') NOT NULL,
    course VARCHAR(100) NOT NULL
);

-- Insert sample student records
INSERT INTO students (name, age, gender, course) VALUES
    ('Palesa', 19, 'Female', 'Policing'),
    ('Siya', 22, 'Male', 'IT');

-- Display the data in the "students" table
SELECT * FROM students;
